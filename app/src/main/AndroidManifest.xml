<manifest
    xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.meslize.forwardresultexample">

  <application
      android:allowBackup="true"
      android:icon="@mipmap/ic_launcher"
      android:label="@string/app_name"
      android:supportsRtl="true"
      android:theme="@style/AppTheme">

    <activity
        android:name=".MainActivity"
        android:label="@string/app_name"
        android:theme="@style/AppTheme.NoActionBar">
      <intent-filter>
        <action android:name="android.intent.action.MAIN"/>
        <category android:name="android.intent.category.LAUNCHER"/>
      </intent-filter>
    </activity>

    <activity
        android:name=".buy.BuyActivity"
        android:label="Buy something"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".other.OtherEntryActivity"
        android:label="Other possible entry"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".profile.ProfileNameStepActivity"
        android:label="Add the name"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".profile.ProfileAddressStepActivity"
        android:label="Add the address"
        android:theme="@style/AppTheme.NoActionBar"/>

    <activity
        android:name=".profile.ProfileFinalStepActivity"
        android:label="Complete profile"
        android:theme="@style/AppTheme.NoActionBar"/>

  </application>

</manifest>
